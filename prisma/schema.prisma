  id                  String    @id @default(cuid())
  cnpjEmpresa         String    @map("cnpj_empresa")
  razaoSocialEmpresa  String    @map("razao_social_empresa")
  nomeFantasiaEmpresa String?   @map("nome_fantasia_empresa")
  regimeTributario    String    @map("regime_tributario")
  
  // Dados da análise
