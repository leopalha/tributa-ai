  startDate   DateTime
  endDate     DateTime
  status      String   // PENDING, ACTIVE, COMPLETED, CANCELLED
  winnerId    String?
  winner      User?    @relation("WinnerAuctions", fields: [winnerId], references: [id])
  finalPrice  Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([creditId])
  @@index([sellerId])
  @@index([winnerId])
}

