  creditosIdentificados CreditoIdentificado[]
  documentosAnalise     DocumentoAnalise[]
  
  @@index([cnpjEmpresa])
  @@index([criadoPorId])
  @@index([statusAnalise])
  @@map("analise_obrigacoes")
