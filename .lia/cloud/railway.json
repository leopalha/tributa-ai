{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Building Genesis Enterprise System v4.1...'",
    "watchPatterns": [
      ".lia/agents/genesis/**",
      ".lia/cloud/**"
    ]
  },
  "deploy": {
    "startCommand": "node .lia/agents/genesis/genesis-enterprise-system.js",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30,
    "numReplicas": 1
  }
}
