# ========================================
# GENESIS PRODUCTION ENVIRONMENT
# Railway Environment Variables
# ========================================

# Environment
NODE_ENV=production
PORT=3003

# OpenRouter API Key
OPENROUTER_API_KEY=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

# Database (será preenchido automaticamente pelo Railway via Reference)
# DATABASE_URL=postgresql://user:pass@host:port/db

# ========================================
# AGENTES DE PRODUÇÃO (24/7)
# ========================================

# ARIA - Atendimento ao Cliente
ENABLE_ARIA=true

# ORACLE - Validação Tributária
ENABLE_ORACLE=true

# THEMIS - Compliance e LGPD
ENABLE_THEMIS=true

# AETHER - Performance e Otimização
ENABLE_AETHER=true

# NEXUS - Coordenação de Agentes
ENABLE_NEXUS=true

# ========================================
# AGENTES DE DESENVOLVIMENTO (Desativados em Prod)
# ========================================

ENABLE_EXECUTOR=false
ENABLE_HELIOS=false
ENABLE_ATLAS=false
ENABLE_THANOS=false
ENABLE_GENESIS_AGENT=false
ENABLE_LIA=false

# ========================================
# CONFIGURAÇÕES DE RECURSOS
# ========================================

# Limites de custo
MAX_DAILY_COST_USD=50.00
MAX_TOKENS_PER_REQUEST=8000

# Concorrência
MAX_CONCURRENT_TASKS=20
MAX_CONCURRENT_AGENTS=5

# Timeouts
REQUEST_TIMEOUT_MS=120000
HEALTH_CHECK_INTERVAL_MS=30000

# ========================================
# FEATURES
# ========================================

ENABLE_DASHBOARD=true
ENABLE_METRICS=true
ENABLE_OPTIMIZATION=true
ENABLE_AUTO_RESTART=true
ENABLE_ERROR_REPORTING=true

# ========================================
# CORS (se precisar de frontend em outro domínio)
# ========================================

CORS_ORIGIN=https://tributa-ai.vercel.app
ALLOWED_ORIGINS=https://tributa-ai.vercel.app,https://tributa.ai

# ========================================
# LOGS
# ========================================

LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
