# =================================================================
# TRIBUTA.AI - ENVIRONMENT CONFIGURATION TEMPLATE
# =================================================================
# This file contains all environment variables needed for the
# Tributa.AI credit tokenization and marketplace platform
# Copy this file to .env.local and configure your values
# =================================================================

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
PORT=3000

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/tributa_ai"
DIRECT_URL="postgresql://username:password@localhost:5432/tributa_ai"

# Redis for caching and sessions
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Two-Factor Authentication
ENABLE_2FA=true
TOTP_ISSUER=Tributa.AI
TOTP_WINDOW=1

# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# =================================================================
# SECURITY & RATE LIMITING
# =================================================================
ENABLE_RATE_LIMIT=true
ENABLE_IP_BLOCKING=true
ENABLE_REQUEST_VALIDATION=true
ENABLE_SECURITY_HEADERS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_MAX=60
RATE_LIMIT_BLOCKCHAIN_MAX=10

# Security Configuration
BLOCKED_IPS=""
ALLOWED_ORIGINS="http://localhost:3000,https://tributaai.com.br"
MAX_REQUEST_SIZE=10485760
ENABLE_CORS=true

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
MAX_LOG_FILE_SIZE=10485760
LOG_RETENTION_DAYS=30

# =================================================================
# BLOCKCHAIN CONFIGURATION
# =================================================================
# Hyperledger Fabric Network
FABRIC_NETWORK_NAME=tributa-network
FABRIC_CHANNEL_NAME=tributa-channel
FABRIC_CHAINCODE_NAME=tributa-cc
FABRIC_MSP_ID=Org1MSP
FABRIC_USER_ID=admin
FABRIC_USER_SECRET=adminpw

# Fabric Connection Profile
FABRIC_CONNECTION_PROFILE_PATH=./blockchain/connection-profile.json
FABRIC_WALLET_PATH=./blockchain/wallet
FABRIC_DISCOVERY_ENABLED=true
FABRIC_DISCOVERY_AS_LOCALHOST=true

# Blockchain API Configuration
BLOCKCHAIN_API_URL=http://localhost:4000
BLOCKCHAIN_API_KEY=your-blockchain-api-key
BLOCKCHAIN_NETWORK_ID=tributa-testnet

# Token Configuration
TOKEN_SYMBOL=TCT
TOKEN_NAME=Tributa Credit Token
TOKEN_DECIMALS=18
TOKEN_INITIAL_SUPPLY=1000000000

# =================================================================
# EXTERNAL INTEGRATIONS
# =================================================================
# Receita Federal API
RFB_API_URL=https://api.receita.fazenda.gov.br
RFB_API_KEY=your-rfb-api-key
RFB_API_VERSION=v1
RFB_TIMEOUT=30000

# SPED Integration
SPED_API_URL=https://sped.fazenda.gov.br/api
SPED_API_KEY=your-sped-api-key
SPED_CERTIFICATE_PATH=./certificates/sped-cert.p12
SPED_CERTIFICATE_PASSWORD=your-certificate-password

# =================================================================
# FEATURE FLAGS
# =================================================================
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_PRICING=true
FEATURE_AUTOMATED_COMPLIANCE=true
FEATURE_MARKETPLACE_V2=true
FEATURE_MOBILE_APP_INTEGRATION=true
FEATURE_MULTI_TENANT=false
FEATURE_WHITE_LABEL=false 